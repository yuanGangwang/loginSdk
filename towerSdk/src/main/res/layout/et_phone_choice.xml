<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/accountLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/areaTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/ic_triangle"
            android:drawableLeft="@mipmap/ic_et_phone"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:minWidth="83dp"
            android:text="+1"
            android:textColor="@color/black333"
            android:textSize="12sp" />

        <View
            android:id="@+id/accountDivider"
            android:layout_width="0.5dp"
            android:layout_height="21dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:background="@color/gray_cd" />

        <EditText
            android:id="@+id/accountEt"
            android:layout_width="match_parent"
            android:saveEnabled="false"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_mail"
            android:drawablePadding="11dp"
            android:inputType="number"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/mobile_number"
            android:textColorHint="#999999"
            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:id="@+id/accountEtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp"
        android:background="@color/gray_cd" />

</LinearLayout>